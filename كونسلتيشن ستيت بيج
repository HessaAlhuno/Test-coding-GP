                                  Text('Ù†ÙˆØ¹ Ø§Ù„Ø§Ø³ØªØ´Ø§Ø±Ø©: ${type != null && type.isNotEmpty ? type : 'Ù„Ø§ ÙŠÙˆØ¬Ø¯ Ù†ÙˆØ¹ Ø§Ø³ØªØ´Ø§Ø±Ø©'}'),
